<p id="notice"><%= notice %></p>

<h1>Listing Encounters</h1>

<table>
  <thead>
    <tr>
      <th>Date time started</th>
      <th>Date time ended</th>
      <th>Requires follow-up</th>
      <th>Follow-up in</th>
      <th>Diagnoses</th>
      <th>Prescription</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encounters.each do |encounter| %>
      <tr>
        <td><%= encounter.date_time_started %></td>
        <td><%= encounter.date_time_ended %></td>
        <td><%= encounter.requires_follow-up %></td>
        <td><%= encounter.follow-up_in %></td>
        <td><%= encounter.diagnoses %></td>
        <td><%= encounter.prescription %></td>
        <td><%= encounter.notes %></td>
        <td><%= link_to 'Show', encounter %></td>
        <td><%= link_to 'Edit', edit_encounter_path(encounter) %></td>
        <td><%= link_to 'Destroy', encounter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

